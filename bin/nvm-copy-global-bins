#!/bin/bash

set -euo pipefail

FROM=$1
TO=$2
YARN_GLOBAL_DIR=$HOME/.config/yarn/global
VERSIONS_DIR=$NVM_DIR/versions/node

cd $VERSIONS_DIR/$FROM/bin
BINS=$(find . -type l)
for BIN in $BINS; do
	TARGET=$(readlink -f $BIN)
	if [[ $TARGET == *"$YARN_GLOBAL_DIR"* ]]; then
		echo $BIN
		NAME=$(basename $BIN)
		cp -P $BIN $VERSIONS_DIR/$TO/bin/$NAME
	fi
done

